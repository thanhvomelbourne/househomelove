@model BusinessService.Models.Common.AdminModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header"><i class="fa fa-dashboard fa-fw"></i> Dashboard</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-barcode fa-5x hidden-xs"></i>
                        <i class="fa fa-barcode fa-2x hidden-lg hidden-md hidden-sm"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge hidden-xs">@Model.Dashboard.TotalCategoryItems</div>
                        <div class="hidden-lg hidden-md hidden-sm">@Model.Dashboard.TotalCategoryItems</div>
                        <div>Categories</div>
                    </div>
                </div>
            </div>
            <a href="/Admin/Category">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-tag fa-5x hidden-xs"></i>
                        <i class="fa fa-tag fa-2x hidden-lg hidden-md hidden-sm"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge hidden-xs">@Model.Dashboard.TotalProductItems</div>
                        <div class="hidden-lg hidden-md hidden-sm">@Model.Dashboard.TotalProductItems</div>
                        <div>Products</div>
                    </div>
                </div>
            </div>
            <a href="/Admin/Product">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-5x hidden-xs"></i>
                        <i class="fa fa-shopping-cart fa-2x hidden-lg hidden-md hidden-sm"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge hidden-xs">@Model.Dashboard.TotalOrderItems</div>
                        <div class="hidden-lg hidden-md hidden-sm">@Model.Dashboard.TotalOrderItems</div>
                        <div>Orders</div>
                    </div>
                </div>
            </div>
            <a href="/Admin/Order">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-user fa-5x hidden-xs"></i>
                        <i class="fa fa-user fa-2x hidden-lg hidden-md hidden-sm"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge hidden-xs">@Model.Dashboard.TotalUserItems</div>
                        <div class="hidden-lg hidden-md hidden-sm">@Model.Dashboard.TotalUserItems</div>
                        <div>Users</div>
                    </div>
                </div>
            </div>
            <a href="/Admin/UserProfile">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i> Area Chart Example
                <div class="pull-right">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                            Actions
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu pull-right" role="menu">
                            <li>
                                <a href="#">Action</a>
                            </li>
                            <li>
                                <a href="#">Another action</a>
                            </li>
                            <li>
                                <a href="#">Something else here</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="#">Separated link</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <canvas id="myChart" width="100%"></canvas>
                <script>
                    var ctx = document.getElementById("myChart");
                    var myChart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
                            datasets: [{
                                label: '# of Votes',
                                data: [12, 19, 3, 5, 2, 3],
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                    'rgba(255, 206, 86, 0.2)',
                                    'rgba(75, 192, 192, 0.2)',
                                    'rgba(153, 102, 255, 0.2)',
                                    'rgba(255, 159, 64, 0.2)'
                                ],
                                borderColor: [
                                    'rgba(255,99,132,1)',
                                    'rgba(54, 162, 235, 1)',
                                    'rgba(255, 206, 86, 1)',
                                    'rgba(75, 192, 192, 1)',
                                    'rgba(153, 102, 255, 1)',
                                    'rgba(255, 159, 64, 1)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        beginAtZero: true
                                    }
                                }]
                            }
                        }
                    });
                </script>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-8 -->
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bell fa-fw"></i> Notifications Panel
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="list-group">
                    <a href="/Admin/Subscription" class="list-group-item">
                        <i class="fa fa-twitter fa-fw"></i> @Model.Dashboard.TotalSubscription Subscriptions
                        <span class="pull-right text-muted small">
                            <em>@Model.Dashboard.LastSubscriptionTime</em>
                        </span>
                    </a>
                    <a href="/Admin/Contact" class="list-group-item">
                        <i class="fa fa-envelope fa-fw"></i> @Model.Dashboard.TotalContactMessageUnread Unread Message
                        <span class="pull-right text-muted small">
                            <em>@Model.Dashboard.LastContactMessageTime</em>
                        </span>
                    </a>
                    <a href="/Admin/Promotion" class="list-group-item">
                        <i class="fa fa-gift fa-fw"></i> Promotion
                        <span class="pull-right text-muted small">
                            <em>@Model.Dashboard.TotalPromotionIsRunning is running</em>
                        </span>
                    </a>
                    <a href="/Admin/Order" class="list-group-item">
                        <i class="fa fa-gift fa-fw"></i> Last order placed
                        <span class="pull-right text-muted small">
                            <em>@Model.Dashboard.LastOrderPlaced</em>
                        </span>
                    </a>
                    @*<a href="#" class="list-group-item">
            <i class="fa fa-shopping-cart fa-fw"></i> Last Order Placed
            <span class="pull-right text-muted small">
                <em>9:49 AM</em>
            </span>
        </a>
        <a href="#" class="list-group-item">
            <i class="fa fa-money fa-fw"></i> Payment Received
            <span class="pull-right text-muted small">
                <em>Yesterday</em>
            </span>
        </a>*@
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-4 -->
</div>