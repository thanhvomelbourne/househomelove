@using (Html.BeginForm("ApplyDiscount", "Product", FormMethod.Post, new { @id = "form_applyDiscount", @class = "modal fade", @role = "dialog" }))
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Apply Discount</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Category</label>
                    <select id="categoryForDiscount" name="categoryDiscountId" class="form-control" required>
                        <option value="">Please choose category</option>
                        <option value="0">All Categories</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Percentage for Discount</label>
                    <input id="amountForDiscount" name="amountForDiscount" type="text" class="form-control" placeholder="Percentage for Discount" required />
                </div>
                <div class="form-group">
                    <label>Apply for the product has sub selected category</label>
                    <label class="checkbox-inline">
                        &nbsp;<input id="applyForSubCategory" name="applyForSubCategory" type="checkbox" checked>
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button id="submit_Category" type="submit" class="btn btn-primary"><i class="fa fa-check"></i>&nbsp;Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
     $(document).ready(function () {
        $.ajax({
            cache: false,
            type: "GET",
            url: '@Url.Action("GetAllCategoriesForAdmin", "Category")',
            async: false,
            dataType: "json",
            timeout: 5000,
            success: function (response) {
                if (response.success === true) {
                    var options;
                    $.each(response.data, function (index, value) {
                        options += "<option value='" + value.Id + "'>" + value.Name + "</option>";
                    });
                    $("#categoryForDiscount").append(options);
                }
            },
        });
    });

    $(".zoomQRCode").click(function () {
        var id = "#" + this.id;
        var url = $(id + ' > img').attr('src');
        zoomImage(url);
    });

    function zoomImage(url) {
        var modal = $('#hoverImage');
        $("#imageZoom").attr("src", "");
        $("#imageZoom").attr("src", url);
        modal.modal('toggle');
    };

    function closeImage() {
        var modal = $('#hoverImage');
        modal.modal('hide');
        isShowModal = false;
    };

    function resetDiscountForm() {
        $("#amountForDiscount").val(null);
    }

    function openViewProduct(id) {
        $.ajax({
            cache: false,
            type: "GET",
            url: '@Url.Action("Details", "Product")',
            async: false,
            data: { productId: id },
            dataType: "json",
            timeout: 5000,
            success: function (response) {
                if (response.success == true) {
                    $('#viewProductName').text(response.data.Name);

                    var images = '<div class="row"><div class="col-md-12" ><div class="form-group"><label>Additional Images</label><br />';

                    if (response.data.SubImage1 !== null) {
                        images += '<div class="col-md-2"><img class="productImage" src="' + response.data.SubImage1+'" /></div>';
                    }
                    if (response.data.SubImage2 !== null) {
                        images += '<div class="col-md-2"><img class="productImage" src="' + response.data.SubImage2 + '" /></div>';
                    }
                    if (response.data.SubImage3 !== null) {
                        images += '<div class="col-md-2"><img class="productImage" src="' + response.data.SubImage3 + '" /></div>';
                    }
                    if (response.data.SubImage4 !== null) {
                        images += '<div class="col-md-2"><img class="productImage" src="' + response.data.SubImage4 + '" /></div>';
                    }
                    if (response.data.SubImage5 !== null) {
                        images += '<div class="col-md-2"><img class="productImage" src="' + response.data.SubImage5 + '" /></div>';
                    }

                    images += '</div></div></div>';

                    var rating = "";

                    for (var i = 1; i <= 5; i++) {
                        if (i <= response.data.AverageRating) {
                            rating += '<i class="fa fa-star checked"></i>';
                        }
                        else if (i > response.data.AverageRating && (response.data.AverageRating > (i - 1))) {
                            if (response.data.AverageRating <= i - 0.5) {
                                rating += '<i class="fa fa-star-half-full checked"></i>';
                            }
                            else {
                                rating += '<i class="fa fa-star checked"></i>';
                            }
                        }
                        else {
                            rating += '<i class="fa fa-star-o checked"></i>';
                        }
                    }

                    var description = response.data.Description != null ? response.data.Description : "";
                    var moreInfo = response.data.MoreInfo != null ? response.data.MoreInfo : "";
                    var originalProductCode = response.data.OriginalProductCode != null ? response.data.OriginalProductCode : "";
                    var content = '<div class="row"><div class="col-md-4" ><img class="productImage" src="' + response.data.PrimaryImage + '" /></div>' +
                        '<div class="col-md-8"><div class="row"><div class="col-md-6"><div class="form-group"><label>Category</label><p class="help-block">' + response.data.CategoryName + '</p></div></div>' +
                        '<div class="col-md-6"><div class="form-group"><label>Original Price</label><p class="help-block">$' + response.data.OriginalPrice + ' per ' + response.data.Unit + '</p></div></div></div>' +
                        '<div class="row"><div class="col-md-6"><div class="form-group"><label>Name</label><p class="help-block">' + response.data.Name + '</p></div></div>' +
                        '<div class="col-md-6"><div class="form-group"><label>Discount Price</label><p class="help-block">$' + response.data.DiscountPrice + ' per ' + response.data.Unit + '</p></div></div></div>' +
                        '<div class="row"><div class="col-md-6"><div class="form-group"><label>Namekey</label><p class="help-block">' + response.data.Namekey + '</p></div></div>' +
                        '<div class="col-md-6"><div class="form-group"><label>Dimensions</label><p class="help-block">Height: ' + response.data.Height + ' Width: ' + response.data.Width + ' Length: ' + response.data.Length + ' Weigth: ' + response.data.Weight + '</p></div></div></div>' +
                        '<div class="row"><div class="col-md-6"><div class="form-group"><label>Original Product Code</label><p class="help-block">' + originalProductCode + '</p></div></div>' +
                        '<div class="col-md-6"><div class="form-group"><label>Primary Color Code</label><p class="help-block">' + response.data.ColorCode + '</p></div></div></div>' +
                        '<div class="row"><div class="col-md-12"><div class="form-group"><label>Evaluation</label><p class="help-block"><i class="fa fa-thumbs-o-up"></i>&nbsp;' + response.data.NumberOfLiked + ' Liked&nbsp;&nbsp;-&nbsp;&nbsp;' + rating + '&nbsp;' + response.data.AverageRating + ' average based on ' + response.data.NumberOfReviewed + ' reviews</p></div></div></div></div></div>' +
                        '<div class="row"><div class="col-md-12" ><div class="form-group"><label>Description</label><p class="help-block text-justify">' + description + '</p></div></div ></div>' +
                        '<div class="row"><div class="col-md-12" ><div class="form-group"><label>More Info</label><p class="help-block text-justify">' + moreInfo + '</p></div></div></div>' + images;

                    $("#body_viewProduct").html(null);
                    $("#body_viewProduct").append(content);
                    $('#form_viewProduct').modal('toggle');
                }
            },
        });
    };

    function confirmDeleteProduct(id, name) {
        $("#delete_nameProduct").text(name);
        $("#productIdForDelete").val(id);
        $('#form_deleteProduct').modal('toggle');
    };

    function openCreateForm() {
        window.location.href = "/Admin/ProductDetail?productId=0";
    }
</script>
